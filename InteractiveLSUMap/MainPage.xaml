<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InteractiveLSUMap.MainPage">

    <ScrollView x:Name="scrollView" 
                HorizontalScrollBarVisibility="Never"
                VerticalScrollBarVisibility="Never">
        
        <!-- AbsoluteLayout to Position Map and Pins -->
        <AbsoluteLayout>
            <!-- Background Map Image -->
            <Image Source="map_sketch.png"
                   Aspect="AspectFill"
                   AbsoluteLayout.LayoutFlags="All"
                   AbsoluteLayout.LayoutBounds="0, 0, 1, 1" />

            <!-- Clickable Pin 1 -->
            <ImageButton Source="question_mark_24.png"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         AbsoluteLayout.LayoutBounds="0.25, 0.5, 20, 20"
                         Clicked="OnPinClicked" />

            <!-- Clickable Pin 2 -->
            <ImageButton Source="question_mark_24.png"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         AbsoluteLayout.LayoutBounds="0.6, 0.7, 20, 20"
                         Clicked="OnPinClicked" />

            <!-- Add more pins as needed -->
        </AbsoluteLayout>
    </ScrollView>

</ContentPage>