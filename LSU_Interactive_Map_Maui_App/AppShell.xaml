<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LSU_Interactive_Map_Maui_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LSU_Interactive_Map_Maui_App"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage" 
            Icon="person_icon.png"/>
        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            Icon="map_icon.png"/>
        <ShellContent
            Title="Events"
            ContentTemplate="{DataTemplate local:EventsPage}"
            Route="EventsPage" 
            Icon="event_list_icon.png"/>
    </TabBar>


</Shell>